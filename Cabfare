create database cab;
use cab;
create table cabdetails(id int primary key,cabtype varchar(40) not null,km int,cabprice double,originalprice double,discount double);
describe cabdetails;
insert into cabdetails(id,cabtype,km,cabprice,originalprice,discount)values(1,'mini',20,60,500,3);
insert into cabdetails(id,cabtype,km,cabprice,originalprice,discount)values(2,'prime',30,80,1200,4);
insert into cabdetails(id,cabtype,km,cabprice,originalprice,discount)values(3,'micro',10,60,1000,5);
insert into cabdetails(id,cabtype,km,cabprice,originalprice,discount)values(4,'mimi',15,50,400,2);
insert into cabdetails(id,cabtype,km,cabprice,originalprice,discount)values(5,'nano',25,40,450,2);
select * from cabdetails;
delete from cabdetails where id=1;
update cabdetails set cabtype='minicab' where id=5;
insert into cabdetails(id,cabtype,km,cabprice,originalprice,discount)values(6,'kiki',35,50,650,1);
insert into cabdetails(id,cabtype,km,cabprice,originalprice,discount)values(8,'mini',5,30,250,3);
alter table cabdetails add email varchar(100);
